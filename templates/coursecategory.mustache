{{!
    @template block_newgu_spdetails/coursecategory

    This template should display all of the top level categories within a course.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "result":[{
            "coursename":"GCAT2023TWEX",
            "subcategories":[
                [
                    {
                        "id":27,
                        "name":"Summative  - Various 22 Point Scale Aggregations - course weighting 75%",
                        "assessmenttype":"Summative",
                        "weight":0.75
                    },
                    {
                        "id":29,
                        "name":"Summative - Converting Points to 22 point Scale - 25% Course Weighting", 
                        "assessmenttype":"Summative",
                        "weight":25,
                    }
                ]
            ]
        }]
    }
}}
<div id="course_data" class="assessments-details-sort-container">
    <table class='table table-responsive'>
        <thead>
            <tr>
                <th id='sortby_course'>{{#str}} header_course, block_newgu_spdetails {{/str}}</th>
                <th id='sortby_categoryorcomponent'>{{#str}} header_category, block_newgu_spdetails {{/str}}</th>
                <th id='sortby_assessmenttype'>{{#str}} header_type, block_newgu_spdetails {{/str}}</th>
                <th id='sortby_weight'>{{#str}} header_weight, block_newgu_spdetails {{/str}}</th>
            </tr>
        </thead>
        <tbody>
        {{#coursedata}}
            {{#subcategories}}
            <tr data-id="{{id}}" class="subcategory-row">
                <td>{{coursename}}</td>
                <td>{{name}}</td>
                <td>{{assessmenttype}}</td>
                <td>{{weight}}</td>
            </tr>
            {{/subcategories}}
        {{/coursedata}}
        </tbody>
    </table>
</div>